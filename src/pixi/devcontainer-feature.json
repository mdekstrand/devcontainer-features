{
  "id": "pixi",
  "version": "0.1.2",
  "name": "Pixi",
  "options": {
    "environment": {
      "type": "string",
      "description": "Pixi environment to install",
      "proposals": [
        "default",
        "dev"
      ],
      "default": "default"
    }
  },
  "postCreateCommand": "pixi install -e $ENVIRONMENT",
  "containerEnv": {
    "PATH": "/opt/pixi/bin:${PATH}",
    "PIXI_HOME": "/opt/pixi"
  }
}
