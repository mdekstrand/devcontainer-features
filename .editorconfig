root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

[*.tcl]
indent_size = 4

[*.tsv]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = false

[*.html]
indent_size = 2

[{*.js,*.mjs,*.ts,*.tsx,*.css,*.scss}]
indent_size = 2

[*.njk]
indent_size = 2

[*.R]
indent_size = 2

[{*.yml,*.yaml,*.json}]
indent_size = 2

[*.xml]
indent_size = 2
